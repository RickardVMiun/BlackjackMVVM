<UserControl x:Class="Blackjack_MVVM.Views.LoserMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack_MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400"
             x:Name="losermessage">

    <Grid Background="Red" Visibility="{Binding Visible, ElementName=losermessage, FallbackValue=Hidden}">
        <TextBlock HorizontalAlignment="Center" Text="Sorry, you lost! Would you like to play again?" VerticalAlignment="Top" Foreground="white" FontSize="15" Margin="0,72,0,0"/>
        <Button Content="Yes" Height="20" Width="50" Margin="255,161,95,19" Command="{Binding PlayAgainCommand}"/>
        <Button Content="No" Height="20" Width="50" Margin="324,161,26,19"/>
    </Grid>
</UserControl>
