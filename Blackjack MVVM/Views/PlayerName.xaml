<UserControl x:Class="Blackjack_MVVM.Views.PlayerName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack_MVVM.Views"
             mc:Ignorable="d" 
             x:Name="playername"
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid Background="AntiqueWhite">
        <TextBlock HorizontalAlignment="Center" Text="{Binding SetPlayerName, ElementName=playername, FallbackValue=No Name}" VerticalAlignment="Top"  Foreground="Black"  FontSize="40" RenderTransformOrigin="-0.121,1.286" />
    </Grid>
</UserControl>
