<UserControl x:Class="Blackjack_MVVM.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack_MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="750">
    <Grid Background="Green" Margin="0,0,0,-70">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <local:GenericCard CardValue="{Binding Card.CardValue}" CardSuit="{Binding Card.CardSuit}" Grid.Column="1" Grid.Row="0" Height="150" Width="100"/>
        <local:GenericCard CardValue="{Binding Card.CardValue}" CardSuit="{Binding Card.CardSuit}" Grid.Column="2" Grid.Row="0" Height="150" Width="100"/>
        <local:GenericCard CardValue="{Binding Card.CardValue}" CardSuit="{Binding Card.CardSuit}" Grid.Column="1" Grid.Row="2" Height="150" Width="100"/>
        <local:GenericCard CardValue="{Binding Card.CardValue}" CardSuit="{Binding Card.CardSuit}" Grid.Column="2" Grid.Row="2" Height="150" Width="100"/>
        <local:GenericCard CardValue="{Binding Card.CardValue}" CardSuit="{Binding Card.CardSuit}" Grid.Column="3" Grid.Row="2" Height="150" Width="100"/>
        <Button Content="Hit" HorizontalAlignment="Center" Margin="0,100,0,0" Grid.Row="1" VerticalAlignment="Top" Height="35" Width="90"  Command="{Binding HitCommand}"/>
    </Grid>
</UserControl>
