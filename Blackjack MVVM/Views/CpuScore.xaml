<UserControl x:Class="Blackjack_MVVM.Views.CpuScore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack_MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200"
             x:Name="cpuscore">
    <Grid Background="Transparent" Height="60" Width="60">
        <Border BorderBrush="#FFFFB101" BorderThickness="5" CornerRadius="10"/>
        <TextBlock HorizontalAlignment="Center" Text="{Binding cpuScore, ElementName=cpuscore, FallbackValue=10}" VerticalAlignment="Top"  Foreground="White"  FontSize="40" RenderTransformOrigin="-0.121,1.286" />
        <Label Content="Dealer Score:" HorizontalAlignment="Left" Margin="-50,-30,-100,0" VerticalAlignment="Top" FontSize="20" Foreground="#FFFFB101" FontFamily="Copperplate Gothic Bold"/>
    </Grid>
</UserControl>
