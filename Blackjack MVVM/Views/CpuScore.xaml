<UserControl x:Class="Blackjack_MVVM.Views.CpuScore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack_MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60"
             x:Name="cpuscore">
    <Grid Background="Transparent" >
        <Border BorderBrush="#FFFFB101" BorderThickness="5" CornerRadius="10"/>
        <TextBlock HorizontalAlignment="Center" Text="{Binding cpuScore, ElementName=cpuscore, FallbackValue=10}" VerticalAlignment="Top"  Foreground="White"  FontSize="40" RenderTransformOrigin="-0.121,1.286" />
    </Grid>
</UserControl>
