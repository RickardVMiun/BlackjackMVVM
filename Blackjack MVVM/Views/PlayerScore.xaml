<UserControl x:Class="Blackjack_MVVM.Views.PlayerScore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack_MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400"
             x:Name="playerscore">

    <Grid Background="Transparent" Height="200" Width="400">
        <TextBlock HorizontalAlignment="Center" Text="{Binding playerScore, ElementName=playerscore, FallbackValue=10}" VerticalAlignment="Top"  Foreground="White"  FontSize="40" RenderTransformOrigin="-0.121,1.286" Margin="0,70,0,0" />

        <TextBlock Foreground="#FFFFB101" FontSize="20" Margin="0,43,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Copperplate Gothic Bold" >
            <Run Text="{Binding setPlayerName}" /><Run Text="s Score:"/>
        </TextBlock>
        <Border BorderBrush="#FFFFB101" BorderThickness="5" CornerRadius="10" Height="60" Width="60"/>
    </Grid>
</UserControl>
