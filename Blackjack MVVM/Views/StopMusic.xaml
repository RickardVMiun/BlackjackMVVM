<UserControl x:Class="Blackjack_MVVM.Views.StopMusic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack_MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="70"
             x:Name="stopmusic">
    <UserControl.Resources>
        <Image x:Key="MyImage" Source="\Images\SoundOff.png" Height="50" Width="70" Visibility="{Binding StopMusicVisible}" />
    </UserControl.Resources>
    
    <Grid Background="Transparent">

        <Button Command="{Binding StopMusicCommand}" Content="{StaticResource MyImage}" IsEnabled="{Binding StopMusicDisabling}"  BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="center" Margin="0,0,0,0" VerticalAlignment="Top" Width="70" Height="50"></Button>

    </Grid>
</UserControl>
