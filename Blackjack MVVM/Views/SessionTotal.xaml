<UserControl x:Class="Blackjack_MVVM.Views.SessionTotal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack_MVVM.Views"
             mc:Ignorable="d"
             x:Name="sessiontotal"
             d:DesignHeight="80" d:DesignWidth="30">
    <Grid>
        <Label Content="{Binding TotalSessionScore, ElementName=sessiontotal, FallbackValue=0}" Margin="2,42,0,0" Grid.RowSpan="2" Width="100" FontSize="35" Foreground="#FFFFB101" Grid.ColumnSpan="2" Height="46" FontFamily="Copperplate Gothic Bold"/>
    </Grid>
</UserControl>
