<UserControl x:Class="Blackjack_MVVM.Views.AceValueDecision"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack_MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400"
             x:Name="acedecision">

    <Grid Background="AntiqueWhite" Visibility="{Binding AceVisible, ElementName=acedecision, FallbackValue=hidden}">
        <Button x:Name="btn1" Command="{Binding Choose1Command}" Content="Choose 1" HorizontalAlignment="Left" Margin="105,141,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="105,10,0,0" Text="You got an Ace! Would you like it to be worth 1 or 11?" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="126"/>
        <Button x:Name="btn11" Command="{Binding Choose11Command}" Content="Choose 11" HorizontalAlignment="Left" Margin="241,141,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
