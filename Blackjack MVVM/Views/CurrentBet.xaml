<UserControl x:Class="Blackjack_MVVM.Views.CurrentBet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack_MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="currentbet">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Text="{Binding BetTotal, ElementName=currentbet, FallbackValue=0}" VerticalAlignment="Top"  Foreground="#FFFFB101"  FontSize="30" RenderTransformOrigin="-0.121,1.286" FontFamily="Copperplate Gothic Bold" />
    </Grid>
</UserControl>
